# docker-compose for testing using external Postgresql and static react frontend
version: "2"

services:
  web:
    container_name: web
    build:
      context: .
      args:
        APP_ENV: local
    image: inftxos:test
    command: >
        bash -exc "
            python3 manage.py runserver 0.0.0.0:5120;
        "
    entrypoint: ""
    volumes:
      - ".:/usr/src/app"
      - "react-build:/usr/src/app/influencetx/static/frontend"
    environment:
      - DATABASE_URL=${DATABASE_URL}
      - TPJ_DB_URL=${TPJ_DB_URL}
      - OPENSTATES_API_KEY=${OPENSTATES_API_KEY}
      - GOOGLE_API_KEY=${GOOGLE_API_KEY}
      - GOOGLE_ANALYTICS=${GOOGLE_ANALYTICS}
    network_mode: "host"
    ports:
      - "5120:5120"
  frontend:
    container_name: frontend
    build:
      context: ./frontend
    image: inftxosfrontend:test
    command: "npm run build"
    environment:
      - NODE_ENV=production
      - REACT_APP_GOOGLE_API_KEY=${GOOGLE_API_KEY}
    volumes:
      - "react-build:/usr/src/app/dest_static"
      - "./frontend:/usr/src/app"

volumes:
  react-build:
    driver: local
